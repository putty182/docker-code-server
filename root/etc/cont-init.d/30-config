#!/usr/bin/with-contenv bash

# passwordless sudo ðŸ˜²ðŸšªâš¡ðŸ’€
echo 'abc ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/00-abc-nopasswd
